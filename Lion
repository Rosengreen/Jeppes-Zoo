public class Lion
{
    private String gender;
    private String legs;
    private String sound;
    
    public Lion(String gender, String legs, String sound)
      {
        this.gender = gender;
        this.legs = legs;
        this.sound = sound;    
      }

    public String getGender()
      {
        return gender;
      }
    public String getLegs()
      {
        return legs;
      }
    public String getSound()
      {
        return sound;
      }
}
